<% form_for(@usuario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :senha %><br />
    <%= f.password_field :senha %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <% if session[:adm] %>
	  <p>
	  	<%= f.label :adm %><br />
	  	<%= f.check_box :adm %>
	  </p>
  <% end %>
  <p>
    <%= f.submit botao %>
  </p>
<% end %>